<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110sp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/matchesnamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/Black"
        android:textSize="16dp"
        android:paddingLeft="3dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/matchimagee"
        app:layout_constraintStart_toStartOf="@+id/matchimagee"
        app:layout_constraintTop_toBottomOf="@+id/matchimagee" />

    <TextView
        android:id="@+id/matchidd"
        android:layout_width="6dp"
        android:layout_height="110dp"
        android:text="TextView"
        android:textColor="@color/Black"
        android:textSize="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/matchesnamee"
        app:layout_constraintEnd_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/matchimagee"
        android:layout_width="89dp"
        android:layout_height="89dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>